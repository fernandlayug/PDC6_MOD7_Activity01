<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC6_MOD7_Activity01.Views.EmployeeDetailPage">
    <ContentPage.Content>
        <StackLayout>

            <Entry x:Name="Name" Text= "{Binding name}" IsReadOnly="True"/>
            <Entry x:Name="Gender" Text="{Binding gender}"/>
            <Entry x:Name="Age" Text="{Binding age}"/>
            <Button Text="Update" Clicked="BtnUpdate"/>
            <Button Text="Delete" Clicked="BtnDelete"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>